FROM openjdk:10
WORKDIR /usr/src/java-code
COPY . /usr/src/java-code/
RUN ./gradlew dependencies
RUN ./gradlew build
 
WORKDIR /usr/src/java-app
RUN cp /usr/src/java-code/MovieService/build/libs/*.jar .
RUN ls
RUN mv ./MovieService-1.0.0.jar ./app.jar
RUN ls
EXPOSE 9000
CMD ["java", "-jar", "app.jar"]